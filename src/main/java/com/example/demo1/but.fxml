<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo1.HelloController">
    <VBox alignment="CENTER" spacing="15" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Charity Recommender" style="-fx-font-size: 22; -fx-font-weight: bold;" />

        <TextField fx:id="inputField" promptText="Enter charity name or your interests..." />

        <HBox alignment="CENTER" spacing="10">
            <RadioButton fx:id="similarRadio" text="Find Similar Charities" toggleGroup="$modeGroup" />
            <RadioButton fx:id="interestRadio" text="Recommend by Interest" toggleGroup="$modeGroup" />
        </HBox>

        <Button text="Get Recommendations" onAction="#onGetRecommendations" />

        <TextArea fx:id="resultArea" prefHeight="300" wrapText="true" />
    </VBox>
</AnchorPane>